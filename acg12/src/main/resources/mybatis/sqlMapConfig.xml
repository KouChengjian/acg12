<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>

    <!-- 配置别名 -->
    <typeAliases>
        <!-- 批量扫描别名 -->
        <typeAlias alias="PageInfo" type="com.acg12.common.pagination.PageInfo"/>
        <package name="com.acg12.modules.app.entity.po"/>
    </typeAliases>

    <plugins>
        <plugin interceptor="com.acg12.common.pagination.PagePlugin">
            <property name="dialect" value="mysql"/>
            <property name="pageSqlId" value=".*ListPage.*"/>
        </plugin>
    </plugins>

    <!-- 配置mapper
    由于使用spring和mybatis的整合包进行mapper扫描，这里不需要配置了。
    必须遵循：mapper.xml和mapper.java文件同名且在一个目录
     -->
    <mappers>
        <mapper resource="mapper/UserMapper.xml"/>
        <mapper resource="mapper/VerifyMapper.xml"/>
        <mapper resource="mapper/FeedbackMapper.xml"/>
        <mapper resource="mapper/UpdateAppMapper.xml"/>

        <mapper resource="mapper/BangumiMapper.xml"/>
        <mapper resource="mapper/VideoMapper.xml"/>
        <mapper resource="mapper/TagsMapper.xml"/>


        <mapper resource="mapper/subject/SubjectsMapper.xml"/>
        <mapper resource="mapper/subject/SubjectDetailMapper.xml"/>
        <mapper resource="mapper/subject/SubjectStaffMapper.xml"/>
        <mapper resource="mapper/subject/SubjectCrtMapper.xml"/>
        <mapper resource="mapper/subject/SubjectSongMapper.xml"/>
        <mapper resource="mapper/subject/SubjectOffprintMapper.xml"/>

        <mapper resource="mapper/person/PersonMapper.xml"/>
        <mapper resource="mapper/person/PersonDetailMapper.xml"/>
        <mapper resource="mapper/character/CharacterMapper.xml"/>
        <mapper resource="mapper/character/CharacterDetailMapper.xml"/>
        <mapper resource="mapper/character/CharacterActorsMapper.xml"/>
    </mappers>
</configuration>