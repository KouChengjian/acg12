    <select id="queryBySubjectGameListPage" resultType="com.acg12.modules.app.entity.po.subject.SubjectEntity">
        <choose>
            <when test="platform == ''">
                select * from acg_subject
                where type like "%"#{type}"%"
                <if test="typeName != ''">
                    and typeName like "%"#{typeName}"%"
                </if>
                <if test="year != ''">
                    <if test="year > 0">
                        and airDate like "%"#{year}"%"
                    </if>
                </if>
            </when>
            <otherwise>
                select acg_subject.subjectId ,acg_subject.sId ,acg_subject.type, acg_subject.image,acg_subject.name,acg_subject_detail.otherTitle ,acg_subject_detail.otherValue
                from acg_subject
                JOIN acg_subject_detail
                ON acg_subject.type like "%"#{type}"%" and acg_subject_detail.otherTitle='平台' and  acg_subject_detail.otherValue like "%"#{platform}"%"
                and acg_subject.sId = acg_subject_detail.sId
                <if test="typeName != ''">
                    and acg_subject.typeName like "%"#{typeName}"%"
                </if>
                <if test="year != ''">
                    <if test="year > 0">
                        and acg_subject.airDate like "%"#{year}"%"
                    </if>
                </if>
            </otherwise>
        </choose>
    </select>

    <select id="queryBySId" parameterType="int" resultType="com.acg12.modules.app.entity.po.subject.SubjectEntity">
