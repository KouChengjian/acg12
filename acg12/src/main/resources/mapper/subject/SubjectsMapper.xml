    <select id="queryBySubjectIdJoinDetail" parameterType="int" resultType="com.acg12.modules.app.entity.po.subject.SubjectEntity">
        select acg_person.personId, acg_person.name, acg_person.nameCn, acg_person.image, acg_person.height, acg_person.weight,
        acg_person.alias, acg_person.type, acg_person.gender, acg_person.bloodtype, acg_person.birthday, acg_person_detail.summary
        from acg_person
        INNER JOIN acg_person_detail
        ON acg_person.personId = acg_person_detail.personId AND acg_person_detail.personId = #{personId} AND acg_person_detail.summary IS  NOT NULL

    </select>
