<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.acg12.dao.subject.SubjectSongDao">

    <resultMap id="subjectSongResultMap" type="com.acg12.entity.po.subject.SubjectSongEntity">
        <result column="subjectSongId" property="subjectSongId" jdbcType="INTEGER"/>
        <result column="subjectId" property="subjectId" jdbcType="INTEGER"/>
        <result column="sId" property="sId" jdbcType="INTEGER"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" parameterType="com.acg12.entity.po.subject.SubjectSongEntity" useGeneratedKeys="true" keyProperty="subjectSongId">
        insert into acg_subject_song (subjectSongId, subjectId, sId, title)
        values (#{subjectSongId,jdbcType=INTEGER},#{subjectId,jdbcType=INTEGER},#{sId,jdbcType=INTEGER}, #{title,jdbcType=VARCHAR})
    </insert>

    <insert id="insertList" parameterType="java.util.List" >
        insert into acg_subject_song (subjectSongId, subjectId, sId, title)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.subjectSongId,jdbcType=INTEGER}, #{item.subjectId,jdbcType=INTEGER}, #{item.sId,jdbcType=INTEGER},
            #{item.title,jdbcType=VARCHAR})
        </foreach>
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="subjectSongId">
            SELECT LAST_INSERT_ID();
        </selectKey>
    </insert>

    <select id="queryBySubjectSongId" parameterType="int" resultType="com.acg12.entity.po.subject.SubjectSongEntity">
        select * from acg_subject_song where subjectSongId = #{subjectSongId}
    </select>

    <select id="queryBySong" resultType="com.acg12.entity.po.subject.SubjectSongEntity">
        select * from acg_subject_song where sId = #{sId} and title = #{title}
    </select>

    <select id="queryBySubjectId" parameterType="int" resultType="com.acg12.entity.po.subject.SubjectSongEntity">
        select * from acg_subject_song where subjectId = #{subjectId}
    </select>

    <select id="queryBySId" parameterType="int" resultType="com.acg12.entity.po.subject.SubjectSongEntity">
        select * from acg_subject_song where sId = #{sId}
    </select>
</mapper>