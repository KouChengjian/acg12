    <resultMap id="BaseResultMap" type="com.acg12.entity.po.SubjectEntity">
        <result column="subjectId" property="subjectId" jdbcType="INTEGER"/>
        <result column="sId" property="sId" jdbcType="INTEGER"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="nameCn" property="nameCn" jdbcType="VARCHAR"/>
        <result column="summary" property="summary" jdbcType="VARCHAR"/>
        <result column="image" property="image" jdbcType="VARCHAR"/>
        <result column="epsCount" property="epsCount" jdbcType="INTEGER"/>
        <result column="airDate" property="airDate" jdbcType="VARCHAR"/>
        <result column="airWeekday" property="airWeekday" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insert" parameterType="com.acg12.entity.po.SubjectEntity" useGeneratedKeys="true" keyProperty="subjectId">
        insert into acg_subject (subjectId , sId , url, type, name, nameCn, summary, image, epsCount, airDate, airWeekday, startPlayTime, createTime, updateTime)
        values (#{bangumitId,jdbcType=INTEGER},#{platform,jdbcType=VARCHAR}, #{title,jdbcType=VARCHAR}, #{cover,jdbcType=VARCHAR}, #{tags,jdbcType=VARCHAR}, #{intro,jdbcType=VARCHAR}
        , #{voiceActor,jdbcType=VARCHAR}, #{nowStatus,jdbcType=VARCHAR}, #{totalCount,jdbcType=VARCHAR}, #{serializeWeek,jdbcType=VARCHAR}, #{serializeTime,jdbcType=INTEGER}
        , #{startPlayTime,jdbcType=INTEGER}, #{createTime,jdbcType=INTEGER}, #{updateTime,jdbcType=INTEGER})
    </insert>

    <insert id="insertList" parameterType="java.util.List" useGeneratedKeys="true">
        <selectKey resultType="INTEGER" keyProperty="bangumitId" order="AFTER">
            SELECT
            LAST_INSERT_ID()
        </selectKey>
        insert into acg_bangumi (platform , title)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.platform},#{item.title})
        </foreach>
    </insert>

    <update id="update" parameterType="com.acg12.entity.po.Bangumi">
        update acg_bangumi set platform=#{platform},title=#{title},cover=#{cover},tags=#{tags},intro=#{intro},voiceActor=#{voiceActor},nowStatus=#{nowStatus}
        ,totalCount=#{totalCount},serializeWeek=#{serializeWeek},serializeTime=#{serializeTime},startPlayTime=#{startPlayTime},updateTime=#{updateTime}
        where bangumitId=#{bangumitId}
    </update>

    <select id="queryList" resultType="com.acg12.entity.po.Bangumi">
        select * from acg_bangumi
    </select>

