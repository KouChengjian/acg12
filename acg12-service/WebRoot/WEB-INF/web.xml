<?xml version="1.0" encoding="UTF-8"?>
<web-app>

	<welcome-file-list>
		<welcome-file>/admin/login.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>404</error-code>
		<location>/error404.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/error500.jsp</location>
	</error-page>


	<!-- 管理界面 -->
	<servlet>
		<servlet-name>LoginUiServlet</servlet-name>
		<servlet-class>org.acg12.servlet.admin.ui.LoginUiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>org.acg12.servlet.admin.ui.RegisterServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>LoginUiServlet</servlet-name>
		<url-pattern>/admin/v/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/admin/v/register</url-pattern>
	</servlet-mapping>





	<!-- 管理界面请求 -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>org.acg12.servlet.admin.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/admin/login</url-pattern>
	</servlet-mapping>






	<!-- 移动请求接口 -->
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>org.acg12.servlet.Home</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HomeInfo</servlet-name>
		<servlet-class>org.acg12.servlet.HomeInfo</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HomeMore</servlet-name>
		<servlet-class>org.acg12.servlet.HomeMore</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Find</servlet-name>
		<servlet-class>org.acg12.servlet.Find</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FindInfo</servlet-name>
		<servlet-class>org.acg12.servlet.FindInfo</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FindInfoAv</servlet-name>
		<servlet-class>org.acg12.servlet.FindInfoAv</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Search</servlet-name>
		<servlet-class>org.acg12.servlet.Search</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PlayUrl</servlet-name>
		<servlet-class>org.acg12.servlet.PlayUrl</servlet-class>
	</servlet>







	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HomeMore</servlet-name>
		<url-pattern>/home/more</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HomeInfo</servlet-name>
		<url-pattern>/home/info</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Find</servlet-name>
		<url-pattern>/find</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FindInfo</servlet-name>
		<url-pattern>/find/info</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FindInfoAv</servlet-name>
		<url-pattern>/find/v</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlayUrl</servlet-name>
		<url-pattern>/playurl</url-pattern>
	</servlet-mapping>



	<filter>
		<filter-name>CharactorEncodingFilter</filter-name>
		<filter-class>org.acg12.filter.CharactorEncodingFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>CharactorEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>