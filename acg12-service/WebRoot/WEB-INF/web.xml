<?xml version="1.0" encoding="UTF-8"?>
<!-- <!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 
	2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> -->
<web-app>

	<filter>
		<filter-name>CharactorEncodingFilter</filter-name>
		<filter-class>org.acg12.filter.CharactorEncodingFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>CharactorEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<servlet>
		<servlet-name>test</servlet-name>
		<servlet-class>org.acg12.servlet.test</servlet-class>
	</servlet>
	<servlet>
		<description>This is the description of my J2EE component
		</description>
		<display-name>This is the display name of my J2EE component
		</display-name>
		<servlet-name>ss</servlet-name>
		<servlet-class>org.acg12.servlet.ui.ss</servlet-class>
	</servlet>
	<servlet>
		<description>This is the description of my J2EE component
		</description>
		<display-name>This is the display name of my J2EE component
		</display-name>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>org.acg12.servlet.ui.MainServlet</servlet-class>
	</servlet>







	<servlet-mapping>
		<servlet-name>test</servlet-name>
		<url-pattern>/servlet/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ss</servlet-name>
		<url-pattern>/servlet/ss</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/servlet/MainServlet</url-pattern>
	</servlet-mapping>




	<!-- 针对404错误的处理页面 -->
	<error-page>
		<error-code>404</error-code>
		<location>/jsps/error/404error.jsp</location>
	</error-page>
	<!-- 针对500错误的处理页面 -->
	<error-page>
		<error-code>500</error-code>
		<location>/jsps/error/500error.jsp</location>
	</error-page>



	<!-- 请求接口 -->
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>org.acg12.servlet.request.Home</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Find</servlet-name>
		<servlet-class>org.acg12.servlet.request.Find</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Search</servlet-name>
		<servlet-class>org.acg12.servlet.request.Search</servlet-class>
	</servlet>




	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Find</servlet-name>
		<url-pattern>/find</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>


</web-app>