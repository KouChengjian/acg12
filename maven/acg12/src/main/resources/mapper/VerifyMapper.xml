<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.acg12.mapper.VerifyMapper" >

    <resultMap id="BaseResultMap" type="com.acg12.beans.Verify" >
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="uid" property="uid" jdbcType="INTEGER" />
        <result column="verifycode" property="verifycode" jdbcType="INTEGER" />
        <result column="duration" property="duration" jdbcType="INTEGER" />
        <result column="status" property="status" jdbcType="INTEGER" />
    </resultMap>

    <insert id="insert" parameterType="com.acg12.beans.Verify"
            useGeneratedKeys="true" keyProperty="id">
        insert into user (id,username, uid,verifycode,duration,status,sign)
        values (#{id,jdbcType=INTEGER},#{uid,jdbcType=INTEGER}, #{verifycode,jdbcType=INTEGER},
         #{duration,jdbcType=INTEGER},#{status,jdbcType=INTEGER})
    </insert>

    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{id}
    </delete>

    <update id="updateVerify" parameterType="com.acg12.beans.Verify">
        update user set uid=#{uid},verifycode=#{verifycode},duration=#{duration},status=#{status} where id=#{id}
    </update>

    <select id="queryVerifyList" resultType="com.acg12.beans.Verify">
        select * from user
    </select>

    <select id="queryVerify" parameterType="int" resultType="com.acg12.beans.Verify">
        select * from user where id = #{id}
    </select>

    <select id="queryVerifyCode" parameterType="int" resultType="com.acg12.beans.Verify">
        select * from user where username = #{username}
    </select>

</mapper>